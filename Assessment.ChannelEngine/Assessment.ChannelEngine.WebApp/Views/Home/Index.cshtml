@model List<ProductDto>

@{
    ViewBag.Title = "Index";
}

<div><b>Top 5 products sold based on the orders that are in progress</b><br /></div>
<table class="table table-bordered table-responsive table-hover">
    <tr>
        <th>Merchant Product No</th>
        <th>Name</th>
        <th>EAN</th>
        <th>Total Quantity Sold</th>
        <th>Stock</th>
        <th>Set Stock</th>
    </tr>

    @for (int i = 0; i < Model.Count; i++)
    {
        <tr>
            <td>@Model[i].MerchantProductNo</td>
            <td>@Model[i].Name</td>
            <td>@Model[i].EAN</td>
            <td>@Model[i].TotalQuantity</td>
            <td>@Model[i].Stock</td>
            <td><a asp-action="SetStock" asp-route-id=i>Set Stock to 25</a></td>
        </tr>
    }
</table>